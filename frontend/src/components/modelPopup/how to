    const modelRef = useRef();

    const openModel = () =>{
        console.log(modelRef.current)
        modelRef.current.openModel();
    }

    <div>
        <button onClick={openModel}>
             <ModelPopup ref={modelRef}>
                <h1>Model Header</h1>
                <p>hello</p>
                <button onClick={() => modelRef.current.close()}>
                    Close
                </button>
             </ModelPopup>
        </button>
    </div>
